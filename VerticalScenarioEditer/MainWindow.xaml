<Window x:Class="VerticalScenarioEditer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerticalScenarioEditer"
        mc:Ignorable="d"
        Title="Vertical Scenario Editer" Height="900" Width="1200" Background="#F0F0F0">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OnFileOpenClick" />
                <MenuItem Header="_Save" Click="OnFileSaveClick" />
            </MenuItem>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="24" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border Width="{x:Static local:DocumentSettings.PageWidthDip}"
                        Height="{x:Static local:DocumentSettings.PageHeightDip}"
                        Background="White"
                        BorderBrush="#909090"
                        BorderThickness="1"
                        SnapsToDevicePixels="True">
                    <Grid Margin="{x:Static local:DocumentSettings.PageMargin}">
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="Transparent">
                            <TextBlock Text="Vertical editor area (empty in M1)"
                                       Foreground="#808080"
                                       FontFamily="{x:Static local:DocumentSettings.DefaultFontFamily}"
                                       FontSize="{x:Static local:DocumentSettings.FontSizeDip}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
