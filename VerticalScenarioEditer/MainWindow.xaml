<Window x:Class="VerticalScenarioEditer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        PreviewMouseWheel="OnWindowPreviewMouseWheel"
        Title="縦書き脚本エディタ" Height="900" Width="1200" Background="#F0F0F0">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_ファイル">
                <MenuItem Header="_開く..." Click="OnFileOpenClick" />
                <MenuItem Header="上書き保存" Click="OnFileSaveClick" />
                <MenuItem Header="名前をつけて保存..." Click="OnFileSaveAsClick" />
                <Separator />
                <MenuItem Header="テキスト書き出し..." Click="OnExportTextClick" />
            </MenuItem>
            <MenuItem Header="_編集">
                <MenuItem Header="テキストをコピー" Click="OnCopyTextClick" />
                <MenuItem Header="役名辞書..." Click="OnRoleDictionaryClick" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="CharCountText" Text="文字数: 0" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock x:Name="PageInfoText" Text="ページ: -" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="表示倍率:" Margin="0,0,6,0" />
                    <TextBlock x:Name="ZoomValueText" Text="100%" Margin="0,0,10,0" />
                    <Slider x:Name="ZoomSlider"
                            Width="160"
                            Minimum="0.5"
                            Maximum="2.0"
                            SmallChange="0.05"
                            LargeChange="0.1"
                            ValueChanged="OnZoomSliderValueChanged"
                            PreviewMouseWheel="OnZoomSliderMouseWheel" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Grid Margin="24">
            <wv2:WebView2 x:Name="EditorWebView" />
        </Grid>
    </DockPanel>
</Window>
