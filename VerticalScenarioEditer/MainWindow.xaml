<Window x:Class="VerticalScenarioEditer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        PreviewMouseWheel="OnWindowPreviewMouseWheel"
        Title="VerticalScenarioEditer(VSE)" Height="900" Width="1200" Background="#F0F0F0">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_ファイル">
                <MenuItem Header="新規作成" Click="OnFileNewClick" />
                <MenuItem Header="開く（.vse）..." Click="OnFileOpenClick" />
                <MenuItem Header="整形済みテキストから読み込み..." Click="OnImportFormattedTextClick" />
                <MenuItem Header="上書き保存" InputGestureText="Ctrl+S" Click="OnFileSaveClick" />
                <MenuItem Header="名前をつけて保存..." Click="OnFileSaveAsClick" />
                <Separator />
                <MenuItem Header="PDF出力..." Click="OnExportPdfClick" />
                <MenuItem Header="整形してテキストファイル出力..." Click="OnExportTextClick" />
                <Separator />
                <MenuItem Header="閉じる" Click="OnFileCloseClick" />
            </MenuItem>
            <MenuItem Header="_編集">
                <MenuItem Header="もとに戻す" InputGestureText="Ctrl+Z" Click="OnUndoClick" />
                <MenuItem Header="やり直す" InputGestureText="Ctrl+Y" Click="OnRedoClick" />
                <Separator />
                <MenuItem Header="テキストをコピー">
                    <MenuItem Header="整形してコピー" Click="OnCopyTextClick" />
                    <MenuItem Header="セリフのみコピー" Click="OnCopyDialogueTextClick" />
                </MenuItem>
                <MenuItem Header="役名辞書..." Click="OnRoleDictionaryClick" />
                <Separator />
                <MenuItem Header="環境設定..." Click="OnOpenSettingsClick" />
                <MenuItem x:Name="SelectionModeMenuItem"
                          Header="選択モード"
                          IsCheckable="True"
                          Checked="OnSelectionModeToggleChanged"
                          Unchecked="OnSelectionModeToggleChanged" />
                <MenuItem x:Name="SummaryModeMenuItem"
                          Header="概要モード"
                          IsCheckable="True"
                          Checked="OnSummaryModeToggleChanged"
                          Unchecked="OnSummaryModeToggleChanged" />
                <MenuItem x:Name="SimpleModeMenuItem"
                          Header="簡易モード"
                          IsCheckable="True"
                          Checked="OnSimpleModeToggleChanged"
                          Unchecked="OnSimpleModeToggleChanged" />
            </MenuItem>
            <MenuItem Header="_表示">
                <MenuItem x:Name="PageNumberToggleMenuItem"
                          Header="ページ番号を表示"
                          IsCheckable="True"
                          Checked="OnPageNumberToggleChanged"
                          Unchecked="OnPageNumberToggleChanged" />
                <MenuItem x:Name="GuideLineToggleMenuItem"
                          Header="罫線の表示"
                          IsCheckable="True"
                          Checked="OnGuideLineToggleChanged"
                          Unchecked="OnGuideLineToggleChanged" />
                <MenuItem x:Name="BreakMarkerToggleMenuItem"
                          Header="改行・改ページ記号を表示"
                          IsCheckable="True"
                          Checked="OnBreakMarkerToggleChanged"
                          Unchecked="OnBreakMarkerToggleChanged" />
            </MenuItem>
            <MenuItem Header="ヘルプ">
                <MenuItem Header="オンラインヘルプを開く"
                          Click="OnHelpOpenClick" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="CharCountText" Text="文字数: 0" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock x:Name="PageInfoText" Text="ページ: -" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock x:Name="ModeStatusText" Text="モード: 本文" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="表示倍率:" Margin="0,0,6,0" />
                    <TextBlock x:Name="ZoomValueText" Text="100%" Margin="0,0,10,0" />
                    <Slider x:Name="ZoomSlider"
                            Width="160"
                            Minimum="0.5"
                            Maximum="2.0"
                            SmallChange="0.05"
                            LargeChange="0.1"
                            ValueChanged="OnZoomSliderValueChanged"
                            PreviewMouseWheel="OnZoomSliderMouseWheel" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Grid Margin="24">
            <wv2:WebView2 x:Name="EditorWebView" />
        </Grid>
    </DockPanel>
</Window>
